        </DisplayString>
        <DisplayString ElementID="Microsoft.SCORE.AD.Computer.Integration.TimedPowerShell.Rule.DS">
          <Name>AD Computer Integration Script Data Source</Name>
          <Description>AD Computer Integration Script  Data Source</Description>
        </DisplayString>
        <DisplayString ElementID="Microsoft.SCORE.AD.Computer.Integration.TimedPowerShell.Rule.WA">
          <Name>AD Computer Integration Script Write Action</Name>
          <Description>AD Computer Integration Script Write Action</Description>
        </DisplayString>
